/* 水平间距 */
.scroll_view_container {
  display: flex;
}
.scroll_view_container .left_scroll_view {
  width: 120px;
}
.scroll_view_container .left_scroll_view .left_scroll_item {
  background-color: #F7F7F7;
  line-height: 60px;
  text-align: center;
}
.scroll_view_container .left_scroll_view .left_scroll_item.active {
  position: relative;
  background-color: #fff;
}
.scroll_view_container .left_scroll_view .left_scroll_item.active:before {
  content: ' ';
  display: block;
  height: 30px;
  width: 3px;
  background-color: #c00000;
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.scroll_view_container .right_scroll_title {
  font-size: 12px;
  font-weight: bold;
  text-align: center;
  padding: 15px 0;
}
.scroll_view_container .right_scroll_lv3 {
  display: flex;
  flex-wrap: wrap;
}
.scroll_view_container .right_scroll_lv3 .right_scroll_item {
  width: 33.33%;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-font-size: 12px;
}
.scroll_view_container .right_scroll_lv3 .right_scroll_item image {
  width: 60px;
  height: 60px;
}

